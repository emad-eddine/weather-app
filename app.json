{
  "expo": {
    "name": "weather-app",
    "slug": "weather-app",
    "version": "1.0.0",
    "scheme": "weather-app-scheme",
    "orientation": "portrait",
    "icon": "./app/assets/icons/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./app/assets/images/splash_screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#011423"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/icons/foreground.png",
        "backgroundColor": "#011423"
      }
    },
    "plugins": [
      "expo-router"
    ]
  }
}
